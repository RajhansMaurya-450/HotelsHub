<% layout("/layouts/boilerplate.ejs") %>

   <div class="row mt-3">
      <div class="col-8 offset-2">
         <h2>
            Details of <%= singleData.title %>
         </h2>
      </div>
      <div class="col-6 offset-2">

         <body>
            <div class="card">
               <img src="<%= singleData.image.url %>" class="card-img-top show-img" alt="hotel image">
               <div class="card-body">
                  <p class="card-text">
                     <b>
                        <%= singleData.title %>
                     </b> <br />
                     <%= singleData.description %><br />
                        â‚¹<%= singleData.price.toLocaleString("en-IN") %> <br />
                           <%= singleData.location %><br />
                              <%= singleData.country %>
                                 <br />
                  </p>


                  <div class="d-flex gap-2 mt-3">

                     <form method="GET" action="/listings/<%=singleData._id%>/edit">
                        <button type="button" class="btn btn-primary">Edit</button>
                     </form>


                     <form method="POST" action="/listings/<%=singleData._id%>?_method=DELETE">
                        <button type="button" class="btn btn-danger">Delete</button>
                     </form>
                  </div>


               </div>
            </div>
      </div>

   </div><br />
   </body>